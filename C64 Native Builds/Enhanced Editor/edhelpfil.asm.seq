;********************************; PRINT HELP TEXT FROM FILE;********************************;HELP        LDA #$0A ; 10 CHARACTERSHELPF   LDX #<FILNAM        LDY #>FILNAM        JSR SETNAM     ; call SETNAM;********************************;;********************************        LDA #$02       ; filenumber 2        LDX $BA        BNE SKIP        LDX #$08       ; default to device number 8SKIP    LDY #$00       ; secondary address 0 (required for dir reading!)        JSR SETLFS     ; call SETLFS;********************************;;********************************        JSR OPEN       ; call OPEN (open the directory)        BCS ERROR      ; quit if OPEN failed;********************************;;********************************        ; CHECK DRIVE ERROR CHANNEL        ; FILE NOT FOUND error etc.;********************************;;********************************        LDX #$02       ; filenumber 2        JSR CHKIN      ; call CHKIN;********************************;;********************************LOOP    JSR $FFB7      ;READST        BNE EOF        JSR CHRIN      ;CHRIN        JSR CHROUT     ; call CHROUT (print character)        JMP LOOP       ; continue until end of line;********************************;;********************************EOF     AND #$40        BEQ ERROR        LDA #$02   ; FILE 2        JSR CLOSE  ; CLOSE        JSR CLRCHN ; CLRCHN;********************************;;********************************ERROR   NOP        ; ACCumulator contains BASIC error code        ; most likely error:        ; A = $05 (DEVICE NOT PRESENT)EXIT    LDA #$02       ; filenumber 2        JSR CLOSE      ; call CLOSE;********************************;;********************************        JSR CLRCHN     ; call CLRCHN        RTS;********************************;;********************************FILNAM .BYTE 'EDHELPA,S,R';********************************.END